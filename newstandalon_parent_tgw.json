      },
      "SubnetPrivateXGfirewall2": {
        "Type": "AWS::EC2::Subnet",
        "Properties": {
          "VpcId": {
            "Ref": "FirewallVPC"
          },
          "CidrBlock": {
            "Fn::Join": [
              ".",
              [
                {
                  "Ref": "PublicNetworkPrefix"
                },
                "2.0/24"
              ]
            ]
          },
          "AvailabilityZone": {
            "Ref": "AvailabilityZoneXGfirewall2"
          },
